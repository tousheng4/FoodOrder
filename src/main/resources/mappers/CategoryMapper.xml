<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cugb.ai.foodorder.mapper.CategoryMapper">

    <resultMap id="CategoryResultMap" type="cugb.ai.foodorder.entity.Category">
        <id     property="id"         column="id"/>
        <result property="name"       column="name"/>
        <result property="sort"       column="sort"/>
        <result property="status"     column="status"/>
        <result property="createdAt"  column="created_at"/>
        <result property="updatedAt"  column="updated_at"/>
    </resultMap>

    <select id="selectAllEnabled" resultMap="CategoryResultMap">
        SELECT id, name, sort, status, created_at, updated_at
        FROM category
        WHERE status = 1
        ORDER BY sort DESC, id ASC
    </select>

</mapper>
